<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_outline"
    android:padding="@dimen/scale_10dp">

    <ImageView
        android:id="@+id/item_iv"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_iv"
        android:layout_centerVertical="true"
        android:textSize="@dimen/scale_18sp"
        android:textColor="@color/darkGrey"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/item_iv"
        android:layout_alignBottom="@id/item_iv"
        android:layout_marginStart="@dimen/scale_10dp" />


</RelativeLayout>